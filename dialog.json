{
  "name": "SkillSculptor",
  "blocks": [
    { "type": "message", "text": "Hey, I help you choose the right learning path and book guided sessions." },

    { "type": "input", "store": "visitor_name", "text": "Your name?" },
    { "type": "input", "store": "visitor_email", "text": "Your email?" },

    { "type": "choice", "store": "academic_year", "options": ["2nd year", "3rd year", "Final year"] },

    {
      "type": "choice",
      "store": "interest_area",
      "text": "Which field do you want to grow in?",
      "options": ["Cloud", "DevOps", "Data", "Web", "ML/AI", "Cybersecurity"]
    },

    {
      "type": "message",
      "text": "Nice choice. Iâ€™ll suggest a learning roadmap and book a mentor slot for you."
    },

    { "type": "webhook_get", "url": "https://YOUR_SERVER_HOST/slotByField?field={{interest_area}}" },

    {
      "type": "input",
      "store": "slot_id",
      "text": "Enter the Slot ID you want to book"
    },

    { "type": "webhook_post", "url": "https://YOUR_SERVER_HOST/saveRecord" },

    { "type": "message", "text": "You're booked. Your roadmap and mentor details will reach your inbox." }
  ]
}
